{
  "name": "Assistive pricing",
  "description": "Handles assistive pricing, and allows for users to modify labels.",
  "ubiquity:listeners": [
    "issues.labeled",
    "issues.unlabeled",
    "label.edited",
    "issue_comment.created"
  ],
  "commands": {
    "allow": {
      "ubiquity:example": "/allow @user1 label",
      "description": "Allows the user to modify the given label."
    }
  },
  "configuration": {
    "default": {},
    "type": "object",
    "properties": {
      "labels": {
        "default": {},
        "type": "object",
        "properties": {
          "time": {
            "default": [],
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "priority": {
            "default": [],
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "time",
          "priority"
        ]
      },
      "basePriceMultiplier": {
        "default": 1,
        "type": "number"
      },
      "publicAccessControl": {
        "default": {},
        "type": "object",
        "properties": {
          "fundExternalClosedIssue": {
            "default": false,
            "type": "boolean"
          }
        },
        "required": [
          "fundExternalClosedIssue"
        ]
      }
    },
    "required": [
      "labels",
      "basePriceMultiplier",
      "publicAccessControl"
    ]
  }
}